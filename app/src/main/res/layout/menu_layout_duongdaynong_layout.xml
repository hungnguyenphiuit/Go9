<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewIconDuongDayNong"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/textViewTenDuongDayNong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/imageViewIconDuongDayNong"
        android:text="TenCuaDuongDayNong"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="53dp" />

    <TextView
        android:id="@+id/textViewSoDienThoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewTenDuongDayNong"
        android:layout_marginEnd="82dp"
        android:text="SoDienThoai"
        android:layout_alignParentRight="true"
        android:layout_marginRight="82dp" />

    <ImageView
        android:id="@+id/imageViewIconDienThoai"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>